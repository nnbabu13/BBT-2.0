<!-- views/session.ejs -->
<%- include('partials/header') %>

<div class="container mt-4">
    <h2>Session Details</h2>

    <% if (flash && Object.keys(flash).length > 0) { %>
        <% Object.keys(flash).forEach(function(type) { %>
            <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
                <%= flash[type] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% }); %>
    <% } %>

    <p>Session ID: <%= sessionId %></p>
    <p>Starting Bankroll: $<%= starting_bankroll.toFixed(2) %></p>
    <p>Current Bankroll: $<%= current_bankroll.toFixed(2) %></p>
    <p>Highest Bankroll: $<%= highest_bankroll.toFixed(2) %></p>
    <p>Base Bet: $<%= base_bet.toFixed(2) %></p>
    <p>Profit Target: $<%= profit_target.toFixed(2) %></p>
    <p>Net Profit/Loss: $<%= net_profit.toFixed(2) %></p>
    <p>Current Bet: $<%= current_bet.toFixed(2) %></p>

    <h3>Bet History</h3>
    <% if (bet_history && bet_history.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Round</th>
                    <th>Bet</th>
                    <th>Result</th>
                    <th>Profit/Loss</th>
                    <th>Bankroll</th>
                    <th>Next Bet</th>
                    <th>Followed Suggestion</th>
                </tr>
            </thead>
            <tbody>
                <% bet_history.forEach(bet => { %>
                <tr>
                    <td><%= bet.round %></td>
                    <td>$<%= bet.bet_amount.toFixed(2) %></td>
                    <td><%= bet.result %></td>
                    <td>$<%= bet.profit_loss.toFixed(2) %></td>
                    <td>$<%= bet.bankroll.toFixed(2) %></td>
                    <td>$<%= bet.next_bet.toFixed(2) %></td>
                    <td><%= bet.followed_suggestion ? "Yes" : "No" %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No bets yet.</p>
    <% } %>
    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Submit New Round</h3>
            <form method="POST" action="/session">
                <div class="mb-3">
                    <label for="bet_amount" class="form-label">Bet Amount</label>
                    <input type="number" class="form-control" id="bet_amount" name="bet_amount" required>
                </div>
                <div class="mb-3">
                    <label for="result" class="form-label">Result</label>
                    <select class="form-select" id="result" name="result" required>
                        <option value="win">Win</option>
                        <option value="loss">Loss</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit Round</button>
            </form>
        </div>

        <div class="col-md-6">
            <h3>Reset Session</h3>
            <form method="POST" action="/reset">
                <button type="submit" class="btn btn-danger">Reset Session</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>